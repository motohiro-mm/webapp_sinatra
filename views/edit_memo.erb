<% @target_memo.each do |memo| %>
  <form method="post" action="/memos/<%= memo["id"] %>">
  <h2>メモタイトル</h2>
  <p>
    <input type="text" name="edit_title" value="<%= escape_string(memo["title"]) %>" maxlength=100>
  </p>
  <h2>メモ本文</h2>
  <p>
    <textarea name="edit_content" maxlength=500><%= escape_string(memo["content"]) %></textarea>
  </p>
  <br>
  <input type="hidden" name="_method" value="patch">
  <input type="text" value="<%= memo["id"] %>" hidden>
  <input type="submit" value="変更">
  </form>
<% end %>
