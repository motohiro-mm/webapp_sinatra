<form method="post" action="/edit_memo">
  <h2>メモタイトル</h2>
  <p>
    <input type="text" name="edit_title" value="<%= @link_memo[:title] %>" maxlength=30>
  </p>
  <h2>メモ本文</h2>
  <p>
    <textarea name="edit_content" maxlength=300><%= @link_memo[:content] %></textarea>
  </p>
  <br>
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="edit_id" value="<%= @link_memo[:id] %>" hidden>
  <input type="submit" value="変更">
</form>
